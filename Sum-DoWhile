<!DOCTYPE html>
<html>
<body>

    <h1>Sum of the First n Numbers</h1>
    <br>

    <p>
    <label for="n">Input a value : </label>
    <input id="n" type="number"></input>
    <button id = "display"> DISPLAY NUMBERS </button>
    </p>

    <br>
    <p id="numbers"></p>

    <h3 id="result"></h3>

<script>

    document.getElementById("display").addEventListener("click", ()=> {

        let n = document.getElementById("n").value*1;
        let sum,i,ntext;

        sum = 0;
        i = 1;
        ntext = "";

        do 
        {
            sum += i ;
            ntext += i ;

            if (i < n)
            {
                ntext += " + ";
            }

            i++;

        } while (i <= n);

        document.getElementById("numbers").innerHTML 
        = ntext;

        document.getElementById("result").innerHTML=
        "The sum of the first "+ n + " numbers is " + sum;

    });


</script>

<br><br><br><br>
<a href="main.html">HOME</a>


</body>

</html>
